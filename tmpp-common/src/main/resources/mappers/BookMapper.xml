    <select id="selectMyBook" resultMap="TBookResultMap">
        SELECT book.id,
               book.isbn,
               book.text_book_name,
               book.text_book_category,
               book.press,
               book.author,
               book.unit_price,
               book.teacher_book_number,
               book.discount,
               book.award_Information,
               book.publication_date,
               book.subscriber,
               book.subscriber_tel,
               book.is_book_purchase,
               book.reason,
               book.login_user_id,
               course.code,
               course.name,
               book.status,
               book.gmt_modified,
               book.gmt_create
        FROM book
                 INNER JOIN plan ON book.plan_id = plan.id
                 INNER JOIN course on course.id = book.course_id
        WHERE book.login_user_id = #{loginUserId,jdbcType=VARCHAR}
          AND plan.execute_plan_id = #{executePlanId,jdbcType=VARCHAR}
        GROUP BY book.isbn
    </select>
